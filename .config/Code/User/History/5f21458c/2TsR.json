{
  "terminal.integrated.allowChords": false,
  "terminal.integrated.automationProfile.linux": {},
  "files.exclude": {
    "**/__pycache__": true,
    "**/.pytest_cache": true,
    "**/.venv": true,
    "**/*.pyc": true
  },
  "search.exclude": {
    "**/__pycache__": true,
    "**/.pytest_cache": true,
    "**/*.pyc": true
  },

  "workbench.colorTheme": "Default Light+",
  "editor.fontSize": 16,

  // Keep semantic highlighting on overall
  "editor.semanticHighlighting.enabled": true,

  // UI colors
  "workbench.colorCustomizations": {
    "editor.background": "#FFE7D1",
    "editor.foreground": "#2B2A33",

    "editorLineNumber.foreground": "#8A766E",
    "editorLineNumber.activeForeground": "#2B2A33",

    "editorCursor.foreground": "#3D348B",

    "editor.selectionBackground": "#7678ED66",
    "editor.inactiveSelectionBackground": "#7678ED33",

    // Indent guides (new keys)
    "editorIndentGuide.background1": "#E6CABB",
    "editorIndentGuide.activeBackground1": "#E6CABB",

    "editorWhitespace.foreground": "#E6CABB",

    "editorBracketHighlight.foreground1": "#7678ED",
    "editorBracketHighlight.foreground2": "#3D348B",
    "editorBracketHighlight.foreground3": "#E2556C",
    "editorBracketPairGuide.activeBackground1": "#7678ED33",
    "editorBracketPairGuide.activeBackground2": "#3D348B33",

    "statusBar.background": "#FFE1C4",
    "statusBar.foreground": "#2B2A33",
    "activityBar.background": "#FFE1C4",
    "activityBar.foreground": "#2B2A33",
    "sideBar.background": "#FFE1C4",
    "sideBar.foreground": "#2B2A33",
    "titleBar.activeBackground": "#FFE1C4",
    "titleBar.activeForeground": "#2B2A33",
    "panel.background": "#FFE1C4",
    "panel.border": "#E6CABB",

    "tab.activeBackground": "#FFE7D1",
    "tab.inactiveBackground": "#FFE1C4",
    "tab.activeBorderTop": "#7678ED",

    // Explorer git decorations
    "editorGutter.addedBackground": "#2FB36C",
    "editorGutter.deletedBackground": "#C2410C",
    "editorGutter.modifiedBackground": "#3558A2",
    "gitDecoration.addedResourceForeground": "#2FB36C",
    "gitDecoration.deletedResourceForeground": "#C2410C",
    "gitDecoration.modifiedResourceForeground": "#3558A2"
  },

  // Semantic token customization block
  "editor.semanticTokenColorCustomizations": {
    "enabled": true,
    "rules": {
      "type": "#7678ED",
      "class": "#7678ED",
      "interface": "#7678ED",
      "namespace": "#E2556C",

      "variable": "#2B2A33",
      "variable.readonly": "#5B21B6",        // was yellow -> violet (colder, stronger)
      "property": "#E2556C",
      "parameter": { "foreground": "#EC4899", "fontStyle": "italic" },  // pink 500

      // Function calls italic; declarations normal
      "function": { "foreground": "#2F5FE3", "fontStyle": "italic" },
      "function.declaration": "#2F5FE3",
      "method":  { "foreground": "#2F5FE3", "fontStyle": "italic" },
      "method.declaration": "#2F5FE3",

      "keyword": "#7678ED",
      "modifier": "#7678ED",
      "operator": "#8A766E",

      "string": "#2A9D8F",
      "number": "#5B21B6",                  // was yellow -> violet
      "regexp": "#2A9D8F",

      "comment": { "foreground": "#8A766E", "fontStyle": "italic" },
      "decorator": "#E2556C",
      "macro": "#5B21B6"                     // was yellow -> violet
    }
  },

  // TextMate rules
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      { "scope": "source.python", "settings": { "foreground": "#2B2A33" } },

      { "scope": ["keyword.control.import.python","keyword.control.flow.python"], "settings": { "foreground": "#EC4899", "fontStyle": "bold" } },

      // Declarations keep normal (non-italic) but use cobalt color
      { "scope": ["entity.name.function.python","support.function.builtin.python"], "settings": { "foreground": "#2F5FE3" } },

      // Parameters -> pink 500, italic
      { "scope": ["variable.parameter.function.python"], "settings": { "foreground": "#EC4899", "fontStyle": "italic" } },

      // Constants -> violet (replace yellow)
      { "scope": ["constant.language.python","constant.other.python"], "settings": { "foreground": "#5B21B6" } },

      { "scope": ["storage.type.function.python","storage.modifier.async.python"], "settings": { "foreground": "#7678ED" } },
      { "scope": ["string.quoted.single.python","string.quoted.double.python","string.interpolated.python"], "settings": { "foreground": "#2A9D8F" } },
      { "scope": ["comment.line.number-sign.python"], "settings": { "foreground": "#8A766E", "fontStyle": "italic" } },

      { "scope": ["source.yaml"], "settings": { "foreground": "#2B2A33" } },
      // YAML booleans/numerics -> violet (replace yellow)
      { "scope": ["constant.language.boolean.yaml","constant.numeric.yaml"], "settings": { "foreground": "#5B21B6" } },
      { "scope": ["string.unquoted.yaml","string.quoted.double.yaml","string.quoted.single.yaml"], "settings": { "foreground": "#2A9D8F" } },
      { "scope": ["punctuation.separator.key-value.yaml"], "settings": { "foreground": "#8A766E" } },

      { "scope": ["source.dockerfile"], "settings": { "foreground": "#2B2A33" } },
      // Dockerfile instructions -> violet (replace yellow)
      { "scope": ["keyword.other.special-method.dockerfile","keyword.control.dockerfile"], "settings": { "foreground": "#5B21B6", "fontStyle": "bold" } },
      { "scope": ["entity.name.function.dockerfile","string.unquoted.dockerfile"], "settings": { "foreground": "#2F5FE3" } },
      { "scope": ["variable.other.dockerfile"], "settings": { "foreground": "#E2556C" } },
      { "scope": ["string.quoted.dockerfile"], "settings": { "foreground": "#2A9D8F" } },
      { "scope": ["comment.line.number-sign.dockerfile"], "settings": { "foreground": "#8A766E", "fontStyle": "italic" } },

      { "scope": ["source.ignore"], "settings": { "foreground": "#2B2A33" } },
      { "scope": ["string.unquoted.ignore"], "settings": { "foreground": "#E2556C" } },
      { "scope": ["constant.character.escape.ignore","keyword.operator.ignore"], "settings": { "foreground": "#7678ED" } },
      { "scope": ["comment.line.number-sign.ignore"], "settings": { "foreground": "#8A766E", "fontStyle": "italic" } }
    ]
  }
}

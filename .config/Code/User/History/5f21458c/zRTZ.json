{
  "terminal.integrated.allowChords": false,
  "terminal.integrated.automationProfile.linux": {},
  "files.exclude": {
    "**/__pycache__": true,
    "**/.pytest_cache": true,
    "**/.venv": true,
    "**/*.pyc": true
  },
  "search.exclude": {
    "**/__pycache__": true,
    "**/.pytest_cache": true,
    "**/*.pyc": true
  },

  "workbench.colorTheme": "Default Light+",
  "editor.fontSize": 16,

  // Keep semantic highlighting on overall
  "editor.semanticHighlighting.enabled": true,

  // UI colors
  "workbench.colorCustomizations": {
    "editor.background": "#FFF0E0",
    "editor.foreground": "#2B2A33",

    "editorLineNumber.foreground": "#8A7F90",
    "editorLineNumber.activeForeground": "#2B2A33",

    "editorCursor.foreground": "#3D348B",

    "editor.selectionBackground": "#7678ED66",
    "editor.inactiveSelectionBackground": "#7678ED33",

    // Indent guides (new keys)
    "editorIndentGuide.background1": "#E9D5CB",
    "editorIndentGuide.activeBackground1": "#E9D5CB",

    "editorWhitespace.foreground": "#E9D5CB",

    "editorBracketHighlight.foreground1": "#7678ED",
    "editorBracketHighlight.foreground2": "#3D348B",
    "editorBracketHighlight.foreground3": "#E2556C",
    "editorBracketPairGuide.activeBackground1": "#7678ED33",
    "editorBracketPairGuide.activeBackground2": "#3D348B33",

    "statusBar.background": "#FFE8D6",
    "statusBar.foreground": "#2B2A33",
    "activityBar.background": "#FFE8D6",
    "activityBar.foreground": "#2B2A33",
    "sideBar.background": "#FFE8D6",
    "sideBar.foreground": "#2B2A33",
    "titleBar.activeBackground": "#FFE8D6",
    "titleBar.activeForeground": "#2B2A33",
    "panel.background": "#FFE8D6",
    "panel.border": "#E9D5CB",

    "tab.activeBackground": "#FFF0E0",
    "tab.inactiveBackground": "#FFE8D6",
    "tab.activeBorderTop": "#7678ED",

    // Explorer git decorations
    "editorGutter.addedBackground": "#2FB36C",
    "editorGutter.deletedBackground": "#C2410C",
    "editorGutter.modifiedBackground": "#3558A2",
    "gitDecoration.addedResourceForeground": "#2FB36C",
    "gitDecoration.deletedResourceForeground": "#C2410C",
    "gitDecoration.modifiedResourceForeground": "#3558A2"
  },

  // New semantic token customization block (replaces old semanticTokenColors)
  "editor.semanticTokenColorCustomizations": {
    "enabled": true,
    "rules": {
      "type": "#7678ED",
      "class": "#7678ED",
      "interface": "#7678ED",
      "namespace": "#E2556C",

      "variable": "#2B2A33",
      "variable.readonly": "#F7B801",
      "property": "#E2556C",
      "parameter": { "foreground": "#F7B801", "fontStyle": "italic" },

      "function": "#3D348B",
      "method": "#3D348B",

      "keyword": "#7678ED",
      "modifier": "#7678ED",
      "operator": "#8A7F90",

      "string": "#2A9D8F",
      "number": "#F7B801",
      "regexp": "#2A9D8F",

      "comment": { "foreground": "#8A7F90", "fontStyle": "italic" },
      "decorator": "#E2556C",
      "macro": "#F7B801"
    }
  },

  // TextMate rules (unchanged; safe to combine with semantic rules)
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      { "scope": "source.python", "settings": { "foreground": "#2B2A33" } },

      { "scope": ["keyword.control.import.python","keyword.control.flow.python"], "settings": { "foreground": "#7678ED", "fontStyle": "bold" } },
      { "scope": ["entity.name.function.python","support.function.builtin.python"], "settings": { "foreground": "#3D348B" } },
      { "scope": ["variable.parameter.function.python"], "settings": { "foreground": "#F7B801", "fontStyle": "italic" } },
      { "scope": ["constant.language.python","constant.other.python"], "settings": { "foreground": "#F7B801" } },
      { "scope": ["storage.type.function.python","storage.modifier.async.python"], "settings": { "foreground": "#7678ED" } },
      { "scope": ["string.quoted.single.python","string.quoted.double.python","string.interpolated.python"], "settings": { "foreground": "#2A9D8F" } },
      { "scope": ["comment.line.number-sign.python"], "settings": { "foreground": "#8A7F90", "fontStyle": "italic" } },

      { "scope": ["source.yaml"], "settings": { "foreground": "#2B2A33" } },
      { "scope": ["entity.name.tag.yaml","support.type.property-name.yaml"], "settings": { "foreground": "#E2556C", "fontStyle": "bold" } },
      { "scope": ["constant.language.boolean.yaml","constant.numeric.yaml"], "settings": { "foreground": "#F7B801" } },
      { "scope": ["string.unquoted.yaml","string.quoted.double.yaml","string.quoted.single.yaml"], "settings": { "foreground": "#2A9D8F" } },
      { "scope": ["punctuation.separator.key-value.yaml"], "settings": { "foreground": "#8A7F90" } },

      { "scope": ["source.dockerfile"], "settings": { "foreground": "#2B2A33" } },
      { "scope": ["keyword.other.special-method.dockerfile","keyword.control.dockerfile"], "settings": { "foreground": "#F7B801", "fontStyle": "bold" } },
      { "scope": ["entity.name.function.dockerfile","string.unquoted.dockerfile"], "settings": { "foreground": "#3D348B" } },
      { "scope": ["variable.other.dockerfile"], "settings": { "foreground": "#E2556C" } },
      { "scope": ["string.quoted.dockerfile"], "settings": { "foreground": "#2A9D8F" } },
      { "scope": ["comment.line.number-sign.dockerfile"], "settings": { "foreground": "#8A7F90", "fontStyle": "italic" } },

      { "scope": ["source.ignore"], "settings": { "foreground": "#2B2A33" } },
      { "scope": ["string.unquoted.ignore"], "settings": { "foreground": "#E2556C" } },
      { "scope": ["constant.character.escape.ignore","keyword.operator.ignore"], "settings": { "foreground": "#7678ED" } },
      { "scope": ["comment.line.number-sign.ignore"], "settings": { "foreground": "#8A7F90", "fontStyle": "italic" } }
    ]
  }
}
